---
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';
import PostsList from '../components/Posts.jsx';
import '../styles/style.css'

let initialPosts = [];
let totalPosts = 0;

try {
  const response = await fetch(`https://dummyjson.com/posts?limit=8`);
  if (!response.ok) {
    throw new Error(`Failed to fetch products: ${response.statusText}`);
  }
  const data = await response.json();
  initialPosts = data.posts;
  totalPosts = data.total;
} catch (error) {
  console.error('Error fetching initial product data for SSG:', error);
}
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Products List</title>
	</head>
	<body>
		<Header/>
        <div class="container">
          <h2 class="text-3xl mb-6 text-center">Our Amazing Products</h2>
        </div>
        <PostsList 
            initialPosts={initialPosts}
            initialTotal={totalPosts}
            client:idle
        />
		<Footer/>
	</body>
</html>
